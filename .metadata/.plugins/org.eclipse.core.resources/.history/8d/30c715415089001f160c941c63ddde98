    <!-- 채용정보 -->
    
    <insert id="recruitInsert" parameterType="com.spring.recruit.vo.RecruitVo">
    	INSERT INTO
    	RECRUIT
    	(
    		SEQ
    		,NAME
    		,BIRTH
    		,FIELD3
    		,PHONE
    		,EMAIL
    		,ADDR
    		,LOCATION
    		,WORK_TYPE
    		,SUBMIT
    	)
    	VALUES
    	(
    		seq_sequence.NEXTVAL
    		,#{name}
    		,#{birth}
    		,#{gender}
    		,#{phone}
    		,#{email}
    		,#{addr}
    		,#{location}
    		,#{workType}
    		,'N'
    	
    	)
    </insert>
    <!-- 제출 -->
    <insert id="recruitSubmit" parameterType="com.spring.recruit.vo.RecruitVo">
    	INSERT INTO
    	RECRUIT
    	(
    		SEQ
    		,NAME
    		,BIRTH
    		,FIELD3
    		,PHONE
    		,EMAIL
    		,ADDR
    		,LOCATION
    		,WORK_TYPE
    		,SUBMIT
    	)
    	VALUES
    	(
    		seq_sequence.NEXTVAL
    		,#{name}
    		,#{birth}
    		,#{gender}
    		,#{phone}
    		,#{email}
    		,#{addr}
    		,#{location}
    		,#{workType}
    		,'Y'
    	
    	)
    </insert>
    
    <select id="recruitSelect" parameterType="com.spring.recruit.vo.RecruitVo" resultMap="recruitVo">
    	SELECT *
    	FROM
    		RECRUIT
    	WHERE
    		NAME = #{name}
    		AND
    		PHONE = #{phone}
    </select>
   
    
    
