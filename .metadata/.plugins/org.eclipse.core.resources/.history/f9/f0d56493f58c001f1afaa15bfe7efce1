    	INSERT INTO
    	RECRUIT
    	(
    		SEQ
    		,NAME
    		,BIRTH
    		,FIELD3
    		,PHONE
    		,EMAIL
    		,ADDR
    		,LOCATION
    		,WORK_TYPE
    		,SUBMIT
    	)
    	VALUES
